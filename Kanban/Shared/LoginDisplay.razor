<AuthorizeView>
    <Authorized>
        <a class="btn btn-outline-secondary" href="Identity/Account/Manage">Hello, @context.User.Identity.Name!</a>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="btn btn-outline-secondary">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-outline-secondary" href="Identity/Account/Register">Register</a>
        <a class="btn btn-outline-secondary" href="Identity/Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
